<br>
<div class="row">
<div class="card card-block">
<h2 class="card-title"><%= @post.title %></h2>
<p class="card-text"><%= @post.content %></p>
</div>
</div>

<div class="container">
<div class="row">
<h5>New Comment:</h5>
<%= form_for [@subreddit, @post, @comment], class: "form-group" do |f| %>
  <p><%= f.text_area :content, placeholder: "Write something...", class: "form-control" %></p>
  <%= f.submit "Post", class: "btn btn-default" %>
<% end %>
</div>
<br>
<div class="row">
<% @post.comments[0..-2].each do |c| %>
  <div class="card card-block">
    <p class="card-text"><%= c.content %></p>
  </div>
<% end %>
</div>
</div>

